{
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "codegen": "pnpm --recursive --parallel run codegen",
    "build": "tsc -b tsconfig.build.json && pnpm --recursive --parallel run build",
    "build:prod": "cross-env NODE_ENV=production pnpm -r --parallel run build",
    "check": "tsc -b tsconfig.json",
    "check-recursive": "pnpm --recursive exec tsc -b tsconfig.json",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "changeset-version": "changeset version && node scripts/version.mjs",
    "changeset-publish": "pnpm build && TEST_DIST= pnpm vitest && changeset publish",
    "dev": "tsx --watch -r tsconfig-paths/register packages/api/src/main.ts",
    "dev:api": "tsx --watch -r tsconfig-paths/register packages/api/src/main.ts",
    "dev:ui": "pnpm --filter @template/ui dev",
    "dev:build": "pnpm --filter @template/ui build",
    "dev:preview": "pnpm --filter @template/ui preview",
    "start": "node packages/api/dist/main.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-export-namespace-from": "^7.27.1",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@effect/build-utils": "^0.7.9",
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "latest",
    "@effect/vitest": "latest",
    "@eslint/compat": "1.2.2",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.13.0",
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@types/node": "^22.18.6",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "dotenv": "^17.2.2",
    "effect": "^3.17.14",
    "eslint": "^9.36.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-codegen": "^0.29.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "glob": "^11.0.3",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "msgpackr-extract",
      "unrs-resolver"
    ]
  },
  "dependencies": {
    "@effect/schema": "^0.75.5",
    "@fastify/type-provider-typebox": "^5.2.0",
    "fastify": "^5.6.1"
  }
}
